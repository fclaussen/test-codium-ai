{
	"name": "codium",
	"version": "2.0.0",
	"description": "The Codium WordPress Theme",
	"author": "Trew Knowledge <info@trewknowledge.com> (https://trewknowledge.com)",
	"scripts": {
		"start": "wp-scripts start",
		"build": "wp-scripts build",
		"setup": "npm install; composer install",
		"reset": "rm -fr node_modules; rm -fr vendor; npm run setup",
		"clean": "rm -rf build/*",
		"format": "wp-scripts format",
		"lint:css": "wp-scripts lint-style",
		"lint:js": "wp-scripts lint-js",
		"lint:php": "phpcs --standard=WordPress-VIP-Go -sp --basepath=. --ignore=vendor *.php",
		"pot": "wp i18n make-pot ./ ./languages/codium.pot --domain=codium --exclude=node_modules",
		"pot:json": "wp i18n make-json ./languages --no-purge --pretty-print",
		"pot:mo": "wp i18n make-mo ./languages",
		"packages-update": "wp-scripts packages-update",
		"test:playwright": "wp-scripts test-playwright",
		"test:playwright:help": "wp-scripts test-playwright --help",
		"test:playwright:debug": "wp-scripts test-playwright --debug",
		"styleguide": "tailwind-config-viewer -o"
	},
	"devDependencies": {
		"@playwright/test": "^1.40.1",
		"@trewknowledge/tailwindcss-config-helpers": "^1.0.2",
		"@types/node": "^20.10.2",
		"@wordpress/prettier-config": "^3.4.0",
		"@wordpress/scripts": "^26.18.0",
		"fast-glob": "^3.3.2",
		"path": "^0.12.7",
		"postcss-preset-env": "^9.3.0",
		"postcss-pxtorem": "^6.0.0",
		"prettier": "^3.1.0",
		"prettier-plugin-tailwindcss": "^0.5.7",
		"stylelint-config-tailwindcss": "^0.0.7",
		"tailwind-config-viewer": "^1.7.3",
		"tailwindcss": "^3.3.5",
		"webpack-remove-empty-scripts": "^1.0.4"
	}
}
